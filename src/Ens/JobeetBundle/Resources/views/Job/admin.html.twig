<div id="job_actions">
    <h3>{% trans %}Admin{% endtrans %}</h3>
    <ul>
        {% if not job.isActivated %}
            <li><a href="{{ path('ens_job_edit', { 'token': job.token }) }}">{% trans %} Edit {% endtrans %}</a></li>
            <li>
                <form action="{{ path('ens_job_publish', { 'token': job.token }) }}" method="post">
                    {{ form_widget(publish_form) }}
                    <button type="submit">{% trans %} Publish {% endtrans %}</button>
                </form>
            </li>
        {% endif %}
        <li>
            <form action="{{ path('ens_job_delete', { 'token': job.token }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit" onclick="if(!confirm('Are you sure?')) { return false; }">
                    {% trans %} Delete {% endtrans %}</button>
            </form>
        </li>
        {% if job.isActivated %}
            <li {% if job.expiresSoon %} class="expires_soon" {% endif %}>
                {% if job.isExpired %}
                    {% trans %} Expired {% endtrans %}
                {% else %}
                    {% trans %} Expires in {% endtrans %}<strong>{{ job.getDaysBeforeExpires }}</strong>
                    {% trans %} days {% endtrans %}
                {% endif %}

                {% if job.expiresSoon %}
                    <form action="{{ path('ens_job_extend', { 'token': job.token }) }}" method="post">
                        {{ form_widget(extend_form) }}
                        <button type="submit">{% trans %} Extend {% endtrans %}</button>
                        {% trans %} for another 30 days {% endtrans %}
                    </form>
                {% endif %}
            </li>
        {% else %}
            <li>
                [{% trans %} Bookmark this {% endtrans %}
                <a href="{{ url('ens_job_preview', { 'token': job.token, 'company': job.companyslug, 'location': job.locationslug, 'position': job.positionslug }) }}">URL</a>
                {% trans %} to manage this job in the future. {% endtrans %}]
            </li>
        {% endif %}
    </ul>
</div>